{
  "name": "blackletter-automation-tests",
  "private": true,
  "type": "module",
  "scripts": {
    "test:py": "node scripts/run_pytests.js",
    "test": "npm run test:py",
    "test:ui": "vitest",
    "lint": "eslint automation --ext .js",
    "format": "prettier -w .",
    "codex:bundle": "python tools/bmad/generate_codex_bundle.py",
    "codex:rules": "python tools/bmad/generate_codex_rules_from_cursor.py",
    "codex:all": "npm run codex:bundle && npm run codex:rules",
    "codex:chat": "codex --cd . -a on-request -s workspace-write",
    "codex:auto": "codex --cd . --full-auto",
    "codex:apply": "codex apply",
    "codex:login": "codex login"
  },
  "dependencies": {
    "bmad-method": "^4.41.0",
    "codex": "^0.2.3",
    "js-yaml": "^4.1.0",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@octokit/core": "5.2.0",
    "@octokit/plugin-paginate-rest": "11.3.3",
    "eslint": "9.9.0",
    "prettier": "3.3.3",
    "vitest": "1.6.0"
  }
}
