{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "legal.findings.ready.v1",
  "type": "object",
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["message_id", "analysis_id", "correlation_id", "producer", "ts", "topic", "schema"],
      "properties": {
        "message_id": {"type": "string"},
        "analysis_id": {"type": "string"},
        "correlation_id": {"type": "string"},
        "causation_id": {"type": "string"},
        "producer": {"type": "string"},
        "ts": {"type": "string"},
        "topic": {"const": "legal.findings.ready.v1"},
        "schema": {"type": "string"},
        "replay": {"type": "boolean"}
      }
    },
    "payload": {
      "type": "object",
      "required": ["findings"],
      "properties": {
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "rule_id", "verdict", "snippet", "start_offset", "end_offset"],
            "properties": {
              "id": {"type": "string", "maxLength": 100},
              "rule_id": {
                "type": "string",
                "maxLength": 100,
                "description": "Unique rule identifier used for UI rule chips"
              },
              "verdict": {"type": "string", "enum": ["Pass", "Weak", "Missing", "Needs-review"]},
              "snippet": {
                "type": "string",
                "maxLength": 5000,
                "contentEncoding": "utf-8"
              },
              "start_offset": {"type": "integer"},
              "end_offset": {"type": "integer"},
              "rationale": {
                "type": "string",
                "maxLength": 2000,
                "contentEncoding": "utf-8"
              }
            }
          }
        }
      }
    }
  }
}
