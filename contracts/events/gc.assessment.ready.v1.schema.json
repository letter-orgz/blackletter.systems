{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "gc.assessment.ready.v1",
  "type": "object",
  "required": ["meta", "payload"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["message_id", "analysis_id", "correlation_id", "producer", "ts", "topic", "schema"],
      "properties": {
        "message_id": {"type": "string"},
        "analysis_id": {"type": "string"},
        "correlation_id": {"type": "string"},
        "causation_id": {"type": "string"},
        "producer": {"type": "string"},
        "ts": {"type": "string"},
        "topic": {"const": "gc.assessment.ready.v1"},
        "schema": {"type": "string"},
        "replay": {"type": "boolean"}
      }
    },
    "payload": {
      "type": "object",
      "required": ["risk"],
      "properties": {
        "risk": {
          "type": "object",
          "required": ["level", "actions"],
          "properties": {
            "level": {"type": "string", "enum": ["Low", "Medium", "High"]},
            "actions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "finding_id", "description"],
                "properties": {
                  "id": {"type": "string"},
                  "finding_id": {"type": "string"},
                  "description": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  }
}
